@model HomeSchool.Models.Student

@{
    ViewBag.Title = "Dodaj ucznia";
}

<h2 style="color: white;">Dodaj ucznia do bazy szkoły</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Nazwisko", htmlAttributes: new { @class = "control-label col-md-2", @style="color: white;" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "Imię", htmlAttributes: new { @class = "control-label col-md-2", @style="color: white;" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EnrollmentDate, "Data dodania", htmlAttributes: new { @class = "control-label col-md-2", @style="color: white;" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EnrollmentDate, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input style="width: 100%;" type="submit" value="Dodaj ucznia" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div style="text-align: right;">
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class="btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
